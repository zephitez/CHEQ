<div class="container has-text-centered">

  <div class="columns is-mobile">
    <div class="column is-half is-offset-one-quarter">
      <h2 class="title">Log In</h2>
      <h3 class="subtitle">Welcome back!</h3>

      <!-- show any messages that come back with authentication -->
      <% if (message.length > 0) { %>
          <div class="alert alert-danger"><%= message %></div>
      <% } %>

      <!-- SIGN FORM -->


      <form action="/signup" method="post">
        <div class="control has-icon">
            <input type="text" class="input is-medium" name="email" placeholder="Enter your email">
            <i class="fa fa-envelope"></i>
        </div>


        <div class="control has-icon">
            <input type="password" class="input is-medium" name="password" placeholder="Enter your password">
            <i class="fa fa-lock"></i>
        </div>

        <button type="submit" class="button is-medium is-warning">
          Log In
        </button>


        <section class="section">
          <p>New to Cheq?
            <a href="/signup">
            Sign up here
            </a>
          </p>

        </section>

      </form>


    </div>

  </div>

  <hr>
  <p><a href="/" class="back"><< Back to home</a></p>

</div>
